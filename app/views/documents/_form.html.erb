
<%= form_with model: @document, local: true do |f| %>

  <%= render 'application/errors', obj: @document %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <% if @document.attachments.any? %>
    <%= f.collection_check_boxes(:remove_files, @document.attachments, :id, :file_name) do |a|%>
      <div class="input-group mb-3">
        <div class="btn-group-toggle" data-toggle="buttons">
          <label class="btn btn-light small">
            <%= a.check_box %>
            Delete
          </label>
          <%= a.object.file_name %>
        </div>
      </div>
   <% end %>
 <% end %>

  <div class="form-group">
    <%= f.label :attachments, "(jpg jpeg png doc docx pdf rtf)", class: 'col-sm-5 control-label' %>
    <%= f.file_field :attachments, multiple: true, class: "form-control-file" %>
  </div>

  <%= f.submit "Save", class: "btn btn-primary" %>
  <%= link_to "Cancel", :back, class: "btn btn-secondary" %>

<% end %>
