<%= link_to "Back to list", documents_path, class: "nav-link" %>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">
      <%= @document.name %>
    </h5>

    <h6 class="card-title"><%= @document.title %></h6>

    <p class="card-subtitle mb-2 text-muted text-small">
      <small><%= @document.created_at %></small>
    </p>

    <p class="card-text"><%= @document.description %></p>

    <% @document.attachments.each do |file| %>
      <small class="card-link mb-2 text-muted">
        <%= link_to file.file_name, download_document_path({file_path: file.full_path}), method: :post, class: 'card-link' %>
      </small>
    <% end %>

    <div class='mt-3'>
      <%= link_to "Edit", edit_document_path(@document), class: "btn btn-primary card-link" %>
      <%= link_to "Delete", document_path(@document), method: :delete, class: "btn btn-danger" , data: { confirm: 'Are you sure?' }%>
    </div>

  </div>

</div>
